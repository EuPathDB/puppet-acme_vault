#!/bin/bash
. ${HOME}/.bashrc

<%= $acme_script %> \
--issue \
<% if $staging { -%>
--staging \
--server <%= $staging_url %> \
<% } else { -%>
--server <%= $prod_url %>
<% } -%>
--dns dns_lexicon \
--dnssleep 600 \
--domain "<%= $domain %>" \
<% $domains.each |$d| { -%>
--domain "<%= $d %>" \
<% } -%>
 > /dev/null && \
<%= $acme_script %> \
--deploy \
--domain <%= $domain %> \
--deploy-hook vault_cli
